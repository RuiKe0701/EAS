<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruike.eas.dao.ClassstuMapper">

    <insert id="insertAllClassStu"  parameterType="java.util.List" >
        INSERT INTO  classstu (stu_id,class_id) VALUES
        <foreach item="item" index="index" collection="list" separator=",">
            (#{item.stu_id},#{item.class_id})
        </foreach>
    </insert>
    <insert id="insertClassStu" parameterType="com.ruike.eas.pojo.Classstu">
        INSERT INTO  classstu (stu_id,class_id)
        VALUES(#{stu_id},#{class_id})
    </insert>
    <resultMap id="stuby" type="com.ruike.eas.pojo.Classstu">
        <result column="stuname" property="stuname"/>
    </resultMap>
    <select id="selectclassstubyclassid" resultMap="stuby">
        select s.stu_id , st.stu_name as stuname from classstu as s,stu as st where s.stu_id=st.stu_id and s.class_id=#{class_id}
    </select>
</mapper>