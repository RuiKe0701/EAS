<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruike.eas.dao.StuScoreMapper">
    <resultMap id="stuscore" type="com.ruike.eas.pojo.StuScore">

    </resultMap>
    <select id="selectStuScore" parameterType="com.ruike.eas.pojo.StuScore" resultMap="stuscore">
        SELECT sc.*,ca.class_name,st.stu_name,cx.ce_Examday,cx.ce_name FROM stuscore sc,stu st,class ca,classexam cx
        <where>
            sc.stu_id = st.stu_id and st.class_id = ca.class_id AND cx.ce_id = sc.ce_id
          <if test="ce_Id != null">
              and sc.ce_Id = #{ce_Id}
          </if>
          <if test="class_id != null">
              and st.class_id = #{class_id}
          </if>
          <if test="stuc_State != null">
              and stuc_State = #{stuc_State}
          </if>
          <if test="stu_id != null">
              and st.stu_id = #{stu_id}
          </if>
      </where>
    </select>

    <insert id="insertStuScore" parameterType="com.ruike.eas.pojo.StuScore">

    </insert>
    <insert id="insertAllStuScore" >
      INSERT INTO stuscore VALUES
        <foreach item="item" index="index" collection="list" separator=",">
            (null,#{item.ce_Id},#{item.stu_Id},#{item.stuc_Wtscores},#{item.stuc_Ctscores},#{item.stuc_Avgscores},#{item.stuc_Createdate},#{item.stuc_State})
        </foreach>
    </insert>
</mapper>